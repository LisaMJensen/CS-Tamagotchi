@using TamagotchiList.Models
<h1>Tamagotchi List</h1>
@if (Model.Count == 0)
{
  <p>There are no Tamagotchi in the List.</p>
}
<ul>
    @foreach (Tamagotchi Tamagotchi in Model)
    {
      <li><a href='/tamagotchi/@Tamagotchi.Id'>@Tamagotchi.Description   Food Level:@Tamagotchi.FoodLevel Attention Level:@Tamagotchi.AttentionLevel Sleep Level:@Tamagotchi.SleepLevel</a></li>
    }
</ul>

<a href='/tamagotchi/new'>Add a new Tamagotchi</a>

<form action="/tamagotchi/delete" method="post">
  <button type="submit" name="button">Clear All Tamagotchis</button>
</form>